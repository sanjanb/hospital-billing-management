<!DOCTYPE html>
<html>
  <head>
    <title>Manage Payments</title>
  </head>
  <body>
    <h1>Manage Payments</h1>
    <form action="/payments/add" method="POST">
      <input type="text" name="billId" placeholder="Bill ID" required />
      <input type="date" name="paymentDate" required />
      <input
        type="number"
        step="0.01"
        name="amountPaid"
        placeholder="Amount Paid"
        required
      />
      <input
        type="text"
        name="paymentMethod"
        placeholder="Payment Method"
        required
      />
      <button type="submit">Add Payment</button>
    </form>
    <table>
      <thead>
        <tr>
          <th>Bill ID</th>
          <th>Payment Date</th>
          <th>Amount Paid</th>
          <th>Payment Method</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% payments.forEach(payment => { %>
        <tr>
          <td><%= payment.BillID %></td>
          <td><%= payment.PaymentDate %></td>
          <td><%= payment.AmountPaid %></td>
          <td><%= payment.PaymentMethod %></td>
          <td>
            <form
              action="/payments/edit/<%= payment.PaymentID %>"
              method="POST"
              style="display: inline"
            >
              <input
                type="text"
                name="billId"
                value="<%= payment.BillID %>"
                required
              />
              <input
                type="date"
                name="paymentDate"
                value="<%= payment.PaymentDate %>"
                required
              />
              <input
                type="number"
                step="0.01"
                name="amountPaid"
                value="<%= payment.AmountPaid %>"
                required
              />
              <input
                type="text"
                name="paymentMethod"
                value="<%= payment.PaymentMethod %>"
                required
              />
              <button type="submit">Edit</button>
            </form>
            <a href="/payments/delete/<%= payment.PaymentID %>">Delete</a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
